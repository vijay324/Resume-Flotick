// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model - using device-based identification (browser fingerprint)
model User {
  id        String   @id @default(cuid())
  deviceId  String   @unique // Browser fingerprint or generated device ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  apiKey  ApiKey?
  aiUsage AIUsage[]

  @@index([deviceId])
}

// Encrypted API key storage
model ApiKey {
  id             String   @id @default(cuid())
  userId         String   @unique
  encryptedKey   String // AES-256-GCM encrypted Gemini API key
  iv             String // Initialization vector for encryption
  salt           String // Salt for key derivation
  keyLastTested  DateTime? // Last time the key was validated
  isValid        Boolean  @default(true)
  lastError      String? // Last error message if key is invalid
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// AI usage tracking for rate limiting and analytics
model AIUsage {
  id          String   @id @default(cuid())
  userId      String
  feature     String // "summarize", "rewrite", "analyze-resume", "analyze-linkedin"
  tokensUsed  Int      @default(0)
  successful  Boolean  @default(true)
  errorMessage String?
  requestedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, requestedAt])
  @@index([feature])
}
